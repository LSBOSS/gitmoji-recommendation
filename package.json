{
    "name": "gitmoji-recommendation",
    "displayName": "Gitmoji Recommendation",
    "description": "Recommends Gitmojis in commit messages based on changed files.",
    "version": "0.0.1",
    "publisher": "ckr0426",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ],
        "menus": {
            "scm/title": [
                {
                    "command": "extension.sayHello",
                    "group": "navigation@1",
                    "when": "scmProvider == git"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "lint": "tslint --format stylish --project .",
        "prettier": "prettier --config node_modules/tslint-lt/.prettierrc.yml --write \"{,!node_modules/}**/*.{ts,tsx}\"",
        "test": "npm run lint && npm run prettier && npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "tslint-lt": "^1.7.2",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21"
    }
}
